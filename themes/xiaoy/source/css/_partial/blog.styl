.blogcontent{
    width: 60vw;
    min-width: 1000px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin: auto;
}

.rightpane{
    float: right
    width: 28%;
    min-width: 240px;
    display: flex;
    flex-direction: column;
}
.posts{
    background-color: rgba(255,255,255,1);
    padding: 2%;
    width: 65%; 
    float: left;    
    border-radius: 5px;

    .post{
        border-bottom: 1px solid #ccc
        padding: 3%
        background-color: rgba(255,255,255,0.9)
        margin: 3% 0;

        .post-title{
            padding-bottom: 10px;
            a{
                text-decoration-line: none;
                color: rgba(51,51,51,.8);
                font-size: 22px;
            }
        }
        .post-content{
            color: #888;
            padding-bottom: 10px;
        }

        .post-footer{
            font-size: 12px;
            color: #ccc;
            .date{
                padding-right: 20px;
            }

            .fa{
                padding-right: 10px; 
            }

            a{
                text-decoration-line: none;
                color: #ccc;
            }
        }
    }
}