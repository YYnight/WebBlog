*{
    margin: 0;
    padding: 0;
    text-decoration:none;
}
ul li{
    list-style: none;
}
body{
    background-color: rgb(241,241,241);
    overflow-x: hidden;
}

p{
    word-break: break-all;
}


.header{
    width: 100vw;
    background-color: rgba(255,255,255,0.6);
    position: fixed;
    line-height: 60px;
    top: 0;
    z-index:100;
    background-size: cover;
    box-shadow: 0px 10px 2px #ccc;
    margin-bottom: 2vh;
}
.line60{
    height: 60px;
    width: 100%;
}

.blank{
    height: 20px;
    overflow: hidden;
    width: 100%;
    margin: auto;
    clear: both;
}

.main{
    width: 100vw;
    min-height: 80vh;
    overflow-x: hidden
}

.footer{
    width: 100vw;
    height: 5vh;
    margin-top: 2vh;
    background-color: rgb(255,255,255);
}

.fadeInRight{
    animation-duration: 1s;
    animation-name: fadeInRight;
}
.fadeInLeft{
    animation-duration: 1s;
    animation-name: fadeInLeft;
}

.fadeIn{
    animation-duration: 1.5s;
    animation-name: fadeIn;
}

.pagination{
    margin: 30px;   

    li{
        list-style: none;
    }

     a{
         text-decoration: none;
         color: #ccc;
     }   
    .pre{
        float: left;
    }
    .next{
        float: right;
    }
    .pagbuttons{
    }
    .pagbuttons:hover{
    }
}
@media only screen and (max-width: 920px)
    .rightpane{
        display: none!important;
    }
    #main .size-controll {
        width: 90vw!important;
        min-width: 0px!important;
        .content{
            width: 100%;
        }
    }
    #main .post{
        min-height:85vh;
    }



