*{
    margin: 0;
    padding: 0;
}
ul li{
    list-style: none;
}
body{
    background-color: rgb(241,241,241);
    overflow-x: hidden;
}

p{
    word-break: break-all;
}

.header{
    width: 100vw;
    height: 11vh;
    min-height: 60px;
    background-color: rgba(255,255,255,0.6);
    background-size: cover;
    box-shadow: 0px 10px 2px #ccc;
    margin-bottom: 2vh;
}

.main{
    width: 100vw;
    min-height: 80vh;
    overflow-x: hidden
}

.footer{
    width: 100vw;
    height: 5vh;
    margin-top: 2vh;
    background-color: rgb(21,21,21);
}

.fadeInRight{
    animation-duration: 1s;
    animation-name: fadeInRight;
}
.fadeInLeft{
    animation-duration: 1s;
    animation-name: fadeInLeft;
}

.fadeIn{
    animation-duration: 1.5s;
    animation-name: fadeIn;
}

.pagination{
    margin: 30px;   

    li{
        list-style: none;
    }

     a{
         text-decoration: none;
         color: #ccc;
     }   
    .pre{
        float: left;
    }
    .next{
        float: right;
    }
    .pagbuttons{
    }
    .pagbuttons:hover{
    }
}
.tag-list-item{
    height:3vh;
    span.tag-list-count{
        color: #ccc;
        line-height: 100%;
        display: block;
        float: right;
        padding-right:10%;
        position:relative;
    }
    span.tag-list-count:before{
        position:absolute;
        left:-23%;
        content:"("
    }
    span.tag-list-count:after{
        position:absolute;
        right:-0%;
        content:"ç¯‡)"
    }
}
.tag-list-item:hover{
     i.fa{
         color: #000;
     }
     span.tag-list-count{
         color: #aaa;
     }
}

